            - name: "Checkout code"
              uses: actions/checkout@v2.3.3
{% if checkoutParams %}
              with:
{% for key, value in checkoutParams %}
                  {{ key }}: {{ value }}
{% endfor %}
{% endif %}

            - name: "Install PHP with extensions"
              uses: shivammathur/setup-php@2.7.0
              with:
                  coverage: "none"
                  php-version: "${{ '{{' }} matrix.php-version {{ '}}' }}"
                  tools: composer:v2
